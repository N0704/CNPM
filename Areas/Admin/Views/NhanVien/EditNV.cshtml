<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">

            <!-- Header -->
            <div class="tw-bg-primary tw-flex tw-items-center tw-justify-between tw-px-4 tw-py-3 tw-rounded-t-lg">
                <div class="tw-flex tw-items-center tw-gap-2">
                    <i data-lucide="edit-3" class="tw-w-5 tw-h-5 tw-text-white"></i>
                    <h5 class="modal-title tw-text-white tw-mt-1">Chỉnh sửa nhân viên</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Form -->
            <form id="editForm" method="post" asp-area="Admin" asp-controller="NhanVien" asp-action="Edit">
                <input type="hidden" name="IDNhanVien" id="edit-id" />

                <div class="modal-body tw-py-4 tw-px-5">
                    <div class="tw-grid tw-grid-cols-2 tw-gap-4">
                        <div class="col mb-3">
                            <label for="edit-idtaikhoan" class="form-label">ID Tài Khoản</label>
                            <select id="edit-idtaikhoan" name="IDTaiKhoan" class="form-select"
                                asp-items="ViewBag.TaiKhoan">
                                <option value="0">-- Chọn tài khoản --</option>
                            </select>
                        </div>

                        <div>
                            <label for="edit-name" class="tw-font-medium tw-text-gray-700">Họ và tên</label>
                            <input type="text" class="form-control tw-mt-1" id="edit-name" name="HoTen"
                                placeholder="Nhập họ và tên nhân viên..." required />
                        </div>

                        <div>
                            <label for="edit-gioitinh" class="tw-font-medium tw-text-gray-700">Giới tính</label>
                            <select class="form-select tw-mt-1" id="edit-gioitinh" name="GioiTinh">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>

                        <div>
                            <label for="edit-cccd" class="tw-font-medium tw-text-gray-700">Căn cước công dân</label>
                            <input type="text" class="form-control tw-mt-1" id="edit-cccd" name="CCCD"
                                placeholder="Nhập số CCCD..." />
                        </div>

                        <div>
                            <label for="edit-sdt" class="tw-font-medium tw-text-gray-700">Số điện thoại</label>
                            <input type="text" class="form-control tw-mt-1" id="edit-sdt" name="SDT"
                                placeholder="Nhập số điện thoại..." />
                        </div>

                        <div>
                            <label for="edit-email" class="tw-font-medium tw-text-gray-700">Email</label>
                            <input type="email" class="form-control tw-mt-1" id="edit-email" name="Email"
                                placeholder="Nhập email..." />
                        </div>

                        <div>
                            <label for="edit-chucvu" class="tw-font-medium tw-text-gray-700">Chức vụ</label>
                            <input type="text" class="form-control tw-mt-1" id="edit-chucvu" name="ChucVu"
                                placeholder="Nhập chức vụ..." />
                        </div>

                        <div class="tw-col-span-2">
                            <label for="edit-address" class="tw-font-medium tw-text-gray-700">Địa chỉ</label>
                            <input type="text" class="form-control tw-mt-1" id="edit-address" name="DiaChi"
                                placeholder="Nhập địa chỉ nhân viên..." />
                        </div>

                        <div>
                            <label for="edit-trangthai" class="tw-font-medium tw-text-gray-700">Trạng thái</label>
                            <select class="form-select tw-mt-1" id="edit-trangthai" name="TrangThai">
                                <option value="0">Đang làm</option>
                                <option value="1">Nghỉ</option>
                            </select>
                        </div>

                    </div>
                </div>

                <!-- Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        Hủy
                    </button>
                    <button type="submit" class="btn btn-primary tw-flex tw-items-center tw-gap-2">
                        <i data-lucide="save" class="tw-w-4 tw-h-4"></i>Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>